/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')
@import url('http://fonts.googleapis.com/css?family=Helvetica')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

//Settings for the containers of the web page

header 
  font-family 'Helvetica'
  padding 15px 5px
  color #fff
  font-size 25px
  text-align center

  navBar
    navbar-fixted
    font-family 'Helvetica'
    padding 5px 5px
    color #fffc
    font-size 15px
    text-align Left

  sidebar
    font-family 'Helvetica'
    padding 15px 10px
    color #fff
    font-size 13px
    text-align center
      
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  
  body
    font-family 'Georgia'
    background-color background-color
    color #444


//Body of the webpage


.container
  width 1000px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 900px

  p
    margin-bottom 10px
    margin-top 20px
  
.sidebar
    float right
    border-radius 3px
    border 2px 
    width 185px
    margin-left 5px
    margin-top 5px 
    overflow hidden
    font-size 12px
    text-align center
    

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 0px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 5px 5px
      margin-bottom 10px

p
  line-height 1.8

footer
  max-width 1070px
  margin 50px auto
  border-top 2px dotted #ccc
  padding-top 5px
  font-size 13px
